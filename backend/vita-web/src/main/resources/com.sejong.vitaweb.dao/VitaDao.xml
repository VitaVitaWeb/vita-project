<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sejong.vitaweb.dao.VitaDao">

    <!-- 자바 객체의 프로퍼티와 컬럼 이름을 연결 -->
    <resultMap type="vitamin" id="vitamin">
        <id column="vno" property="vno"/>
        <result column="NAME" property="name"/>
        <result column="LINK" property="link"/>
        <result column="IMG_PATH" property="img_path"/>
    </resultMap>

    <!-- 자바 객체의 프로퍼티와 컬럼 이름을 연결 -->

    <!--DB에 추가-->
    <insert id="insertVitaDBToVita" parameterType="naverProductDto">
        insert ignore into vita_vita(name, link, img_path, cat1, cat2, cat3, cat4)
        values(#{title}, #{link}, #{image}, #{category1}, #{category2}, #{category3}, #{category4})
    </insert>

    <!--비타민 추가-->
    <insert id="insertVita" parameterType="vitamin">
        insert into vita_member(NAME, LINK, IMG_PATH)
        values(#{NAME}, #{LINK}, #{IMG_PATH})
    </insert>

    <!--비타민 조회-->
    <select id="findVitalAll" resultMap="vitamin">
        select
            *
        from
            vita_vita
    </select>

    <select id="findVitaById" resultMap="vitamin">
        select
            *
        from
            vita_vita
        where
            VNO=#{VNO}
    </select>

    <update id="updateVita" parameterType="map">
        update vita_vita set
         name = #{name}, link = #{link}, img_path=#{img_path}
        where
        VNO=#{VNO}
    </update>


</mapper>